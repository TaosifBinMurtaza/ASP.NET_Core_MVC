
@{
    ViewData["Title"] = "Index";
}

<h1>ProductList</h1>
<a asp-controller="" asp-action="" class="btn btn-secondary">Create Product</a>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            ISBN
        </th>
        <th>
            Price
        </th>
        <th>
            Author
        </th>
        <th>
            Category
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.ISBN
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.CategoryId
            </td>
        </tr>
    }
</table>

